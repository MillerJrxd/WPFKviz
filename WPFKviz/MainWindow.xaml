<Window x:Class="WPFKviz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFKviz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFFAF3E0">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="SzóMester" FontSize="32" FontWeight="Bold" Foreground="#333333" TextAlignment="Center" Margin="0 0 0 10"/>
            <Button Content="Kvíz indítása" Width="200" Height="50" Click="StartQuiz_Click" Margin="0 0 0 10" />
            <Button Content="Adatbázis importálása" Width="200" Height="50" Click="ImportDatabase_Click" Margin="0 0 0 10" />
            <Button Content="Beállítások" Width="200" Height="50" Click="Settings_Click" />
        </StackPanel>
    </Grid>
</Window>
